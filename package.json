{
  "name": "moodly",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "lint": "yarn eslint --ext json,js,jsx,ts,tsx ./ && cd client && yarn lint",
    "lint:fix": "yarn eslint --ext json,js,jsx,ts,tsx --fix ./ && cd client && yarn lint:fix",
    "start": "cd client && yarn start",
    "build": "cd client && yarn build",
    "test": "cd client && yarn test",
    "postinstall": "cd client && yarn install",
    "deploy": "cd client && yarn deploy",
    "hard-reset": "rm -rf ./node_modules && yarn cache clean && cd client && yarn hard-reset"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^1.3.0",
    "eslint": "5.12.0",
    "eslint-config-prettier": "^4.0.0",
    "eslint-plugin-json": "^1.4.0",
    "eslint-plugin-prettier": "^3.0.1",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.4",
    "typescript": "^3.3.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,css,module.css,scss,module.scss}": [
      "yarn lint:fix",
      "git add"
    ]
  }
}

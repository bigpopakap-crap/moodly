{
  "name": "moodly",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "lint": "cd client && npm run lint",
    "lint:fix": "cd client && npm run lint:fix",
    "start": "cd client && npm start",
    "build": "cd client && npm run build",
    "test": "cd client && npm test",
    "postinstall": "cd client && npm install",
    "deploy": "cd client && npm run deploy",
    "hard-reset": "rm package-lock.json && rm -rf ./node_modules && cd client && npm run hard-reset"
  },
  "devDependencies": {
    "husky": "^1.3.1",
    "lint-staged": "^8.1.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,css,module.css,scss,module.scss}": [
      "npm lint:fix",
      "git add"
    ]
  }
}
